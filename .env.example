# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configurations
DATABASE_URL=postgresql://username:password@localhost:5432/secure_docs
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_docs
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT & Encryption Secrets (Generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_32_chars_minimum
JWT_REFRESH_SECRET=your_refresh_secret_here_32_chars_minimum
USER_KEY_SECRET=your_user_key_secret_here_32_chars_minimum
GATEWAY_SECRET=your_gateway_secret_here_32_chars_minimum

# SSL Certificates (Development)
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.crt
CLIENT_CERT_PATH=./certs/client.crt
CLIENT_KEY_PATH=./certs/client.key
CA_CERT_PATH=./certs/ca.crt

# External APIs
PRIVATE_API_URL=https://private-api.internal

# CORS Configuration
ALLOWED_ORIGINS=https://localhost:3000,https://yourdomain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info

# Railway Environment (Auto-detected)
RAILWAY_ENVIRONMENT=